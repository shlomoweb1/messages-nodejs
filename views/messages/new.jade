extends ../layout

block content
  div.container
    h1.
        #{title}

    form#formAddMessage(name="addMessage",method="post",action="/messages", enctype="multipart/form-data")
        p Name: 
            input#inputTitle(type="text", placeholder="Insert a title here", name="title", class="form-control")
        p Message:
            textarea#textareaMessage(placeholder="Insert your message here.", name="message", class="form-control")
        p Attachment:
            input#userInputFile(type="file", name="logName", class="form-control")
        p
            button#btnSubmit(type="submit", class="btn btn-primary pull-right") submit

        